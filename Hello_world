#include <stdio.h>

void findTwoSum(int arr[], int n, int target) {
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (arr[i] + arr[j] == target) {
                printf("Pair found: %d + %d = %d\n", arr[i], arr[j], target);
                return; // Stop after finding the first pair
            }
        }
    }
    printf("No pair found with the given target.\n");
}

int main() {
    int arr[] = {2, 7, 11, 15};
    int n = sizeof(arr) / sizeof(arr[0]);
    int target = 9;

    findTwoSum(arr, n, target);

    return 0;
}
